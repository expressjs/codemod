{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "ES2022",
    "downlevelIteration": true,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "outDir": "build"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "build", "**/__testfixtures__", "**/__test__", "**/*.spec.ts"]
}
